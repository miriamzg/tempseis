event_code="$file"
inversion_code="test7_$a"

mkdir $path/TEMPSEIS_PACKAGE/Inversion/Results/${event_code}
results_folder=$path/TEMPSEIS_PACKAGE/Inversion/Results/${event_code}/${inversion_code}

mkdir ${results_folder}
mkdir ${results_folder}/observed/
mkdir ${results_folder}/best_predicted/

cd $path/TEMPSEIS_PACKAGE/Inversion/Preparation
cp az_coverageTEST_*.pdf $path/TEMPSEIS_PACKAGE/Inversion/Results/${event_code}/${inversion_code}
python scalar_moment.py ${file} ${results_folder}

cd $path/TEMPSEIS_PACKAGE/Inversion/NA/src
make clean
make all
cd ../data
../bin/rfi_na

cp rfi_files/NA_MDL/rfi_param ${results_folder}
cp rfi_files/NA_MDL/rfi_models ${results_folder}
cp rfi_files/rfi.in ${results_folder}
cp na.in  ${results_folder}
mv rfi_files/FINAL/*observed.asc ${results_folder}/observed/
mv rfi_files/FINAL/*best_predicted.asc ${results_folder}/best_predicted/
cp station_mft.asc ${results_folder}
cp best_model.asc ${results_folder}

#running plotting scripts 
cd $path/TEMPSEIS_PACKAGE/Inversion/Plot_results
python plot_results_subplot.py ${results_folder}
python plot_fault_results.py ${results_folder}            # uncomment for real data test
# python plot_fault_results_SYNT.py ${results_folder}  # uncomment for synthetic test
python plot_correlations.py ${results_folder}
python plot_station_map_body_surface.py ${results_folder} + lat + lon
# python plot_observed_vs_best_predicted_body_surface.py${results_folder}
python plot_seismograms2.py ${results_folder}
